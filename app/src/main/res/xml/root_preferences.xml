<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings">
    <PreferenceCategory android:title="@string/settings_category_theme">
        <SwitchPreference
            android:defaultValue="true"
            android:disableDependentsState="true"
            android:key="follow_system_theme"
            android:title="@string/settings_follow_system_theme" />
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="follow_system_theme"
            android:key="dark_mode"
            android:title="@string/settings_enable_dark_theme" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Configuration">
        <EditTextPreference
            android:defaultValue="192.168.0.182"
            android:key="edit_text_preference_ip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:title="@string/ip_address"
            app:singleLineTitle="true"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue="https://openapi.tuyaeu.com"
            android:key="edit_text_preference_host"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:title="@string/host_address"
            app:singleLineTitle="true"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue=""
            android:key="edit_text_preference_client_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:title="@string/client_id"
            app:singleLineTitle="true"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue=""
            android:key="edit_text_preference_api_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:title="@string/api_key"
            app:singleLineTitle="true"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue=""
            android:key="edit_text_preference_heating_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:title="@string/heating_id"
            app:singleLineTitle="true"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue=""
            android:key="edit_text_preference_cooling_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:title="@string/cooling_id"
            app:singleLineTitle="true"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


</PreferenceScreen>